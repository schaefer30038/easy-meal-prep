<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NormalButtonRed" parent="Theme.AppCompat">
        <item name="android:textColor">#DD4D00</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:buttonStyle">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NormalButtonBrown" parent="Theme.AppCompat">
        <item name="android:textColor">#CC7A01</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:buttonStyle">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NormalButtonBlue" parent="Theme.AppCompat">
        <item name="android:textColor">#7631F1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:buttonStyle">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NormalButtonPurple" parent="Theme.AppCompat">
        <item name="android:textColor">#9536A5</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:buttonStyle">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TitleText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/lightCream</item>
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="BodyText" parent="Theme.AppCompat">
        <item name='android:textColor'>@color/lightCream</item>
        <item name='fontFamily'>@font/comfortaa</item>
        <item name='android:textSize'>20sp</item>
        <item name='android:layout_margin'>20sp</item>
    </style>
    <style name="FillInfo" parent="Theme.AppCompat">
        <item name='android:backgroundTint'>@color/white</item>
        <item name='android:fontFamily'>@font/comfortaa</item>
        <item name='android:ems'>12</item>
    </style>
    <style name="SmallButton" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/small_button</item>
        <item name="android:buttonStyle">@drawable/small_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="TitleDesc" parent="Theme.AppCompat">
        <item name='android:textColor'>@color/lightCream</item>
        <item name='android:fontFamily'>@font/comfortaa_light</item>
        <item name='android:textSize'>20sp</item>
        <item name='android:paddingTop'>30sp</item>
    </style>

    <style name="FillDesc" parent="Theme.AppCompat">
        <item name='android:backgroundTint'>@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>
    <style name='SpinnerDropdownTheme' parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:colorBackground">#9B78A1</item>
    </style>

</resources>